<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="4dp">

    <TextView
        android:id="@+id/textViewTentativa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:letterSpacing="0.5"
        tools:text="1234" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <View
            android:id="@+id/feedbackView1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="2dp"
            tools:background="@drawable/feedback_certo"/>
        <View
            android:id="@+id/feedbackView2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="2dp"
            tools:background="@drawable/feedback_posicao_errada"/>
        <View
            android:id="@+id/feedbackView3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="2dp"
            tools:background="@drawable/feedback_errado"/>
        <View
            android:id="@+id/feedbackView4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="2dp"
            tools:background="@drawable/feedback_certo"/>
    </LinearLayout>
</LinearLayout>