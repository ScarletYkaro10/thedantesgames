<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ResultadoRPSActivity">

    <TextView
        android:id="@+id/textViewResultadoFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:text="VocÃª Venceu!" />

    <TextView
        android:id="@+id/textViewPlacarFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:textSize="20sp"
        tools:text="Placar Final: 2 x 1" />

    <Button
        android:id="@+id/buttonJogarNovamente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BotaoVermelho"
        android:layout_marginBottom="8dp"
        android:text="@string/botao_jogar_novamente" />

    <Button
        android:id="@+id/buttonVoltarMenu"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/botao_voltar_menu" />

</LinearLayout>